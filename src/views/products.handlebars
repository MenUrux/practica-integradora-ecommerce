            <div class="aspect-w-1 aspect-h-1 overflow-clip relative">
                <a href="/products/{{this._id}}">
                    {{#if this.thumbnail}}
                    <!-- Si hay imagen, mostrarla -->


                    <div role="status"
                        class="text-center aspect-w-1 aspect-h-1 aspect-square w-full h-full max-w-md max-h-md m-auto z-10 flex items-center justify-center">
